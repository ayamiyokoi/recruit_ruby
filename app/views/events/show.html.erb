
<div class="container">
  <div class="row">
    <div class="col-12">
      <h1><%= link_to '<', events_path %> イベント詳細</h1>

      <p id="notice"><%= notice %></p>
      <p>
        <strong>企業名：</strong>
        <%= @event.company.name %>
      </p>

      <p>
        <strong>イベント名：</strong>
        <%= @event.name_i18n %>
      </p>

      <p>
        <strong>日時：</strong>
        <%= l @event.date, format: :long %>
      </p>

      <p>
        <strong>ステータス：</strong>
        <%= @event.is_passed_i18n %>
      </p>

      <%= link_to '編集', edit_event_path(@event), class: "btn btn-success" %>
      <%= link_to '削除', event_path(@event), method: :delete, data: { confirm: '本当に削除しますか?' }, class: "btn btn-danger" %>
    </div>
  </div>
</div>