
<div class="container">
  <div class="row">
    <div class="col-12">
      <h1><%= link_to '<', events_path %> イベント詳細</h1>

      <p id="notice"><%= notice %></p>
      <p>
        <strong>Company:</strong>
        <%= @event.company.name %>
      </p>

      <p>
        <strong>Name:</strong>
        <%= @event.name_i18n  %>
      </p>

      <p>
        <strong>Date:</strong>
        <%= @event.date %>
      </p>

      <p>
        <strong>Is passed:</strong>
        <%= @event.is_passed_i18n  %>
      </p>

      <%= link_to '編集', edit_event_path(@event), class: "btn btn-success" %>
    </div>
  </div>
</div>