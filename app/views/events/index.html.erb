<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Company</th>
      <th>Name</th>
      <th>Date</th>
      <th>Is passed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.user %></td>
        <td><%= event.company %></td>
        <td><%= event.name %></td>
        <td><%= event.date %></td>
        <td><%= event.is_passed %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path %>
<div class="container">
  <div class="row">
    <div class="col-12">
      <p id="notice"><%= notice %></p>

      <h1>イベント一覧</h1>
      <hr>
      <%= link_to 'イベントの登録', new_event_path, class: "btn btn-primary" %>
      <% @companies.each do |company| %>
        <%= link_to company do %>
          <div class="box_r">
            <div class="row">
              <div class="col-4">
                <%= company.name %>
              </div>
              <div class="col-4">
                <%= company.job %>
              </div>
              <div class="col-4">
                <p>一次選考</p>
              </div>
            </div>
            <div class="row">
              <div class="col-4">
                <p>志望度：</p>
              </div>
              <div class="col-8">
                <p>次の選考</p>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

