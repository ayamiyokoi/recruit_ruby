<div class="container">
  <div class="row">
    <div class="col-12">
      <p id="notice"><%= notice %></p>

      <h1>イベント一覧</h1>
      <hr>
      <%= link_to 'イベントの登録', new_event_path, class: "btn btn-primary" %>
      <% @companies.each do |company| %>
        <% if Event.where(company_id: company.id).exists? %>
          <%= link_to company do %>
            <div class="box_r">
              <div class="row">
                <div class="col-4">
                  <%= company.name %>
                </div>
                <div class="col-4">
                  <%= company.job %>
                </div>
                <div class="col-4">
                  <p>一次選考</p>
                </div>
              </div>
              <div class="row">
                <div class="col-4">
                  <p>志望度：</p>
                </div>
                
                <% @company_event = Event.where(company_id: company.id).last %>
                <div class="col-8">
                  <p>次の選考:<%= @company_event.name %> 日時:<%= @company_event.date%></p>
                </div>
                
              </div>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

