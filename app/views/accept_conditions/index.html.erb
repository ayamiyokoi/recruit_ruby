<p id="notice"><%= notice %></p>

<h1>Accept Conditions</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Content</th>
      <th>Importance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accept_conditions.each do |accept_condition| %>
      <tr>
        <td><%= accept_condition.user %></td>
        <td><%= accept_condition.content %></td>
        <td><%= accept_condition.importance %></td>
        <td><%= link_to 'Show', accept_condition %></td>
        <td><%= link_to 'Edit', edit_accept_condition_path(accept_condition) %></td>
        <td><%= link_to 'Destroy', accept_condition, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Accept Condition', new_accept_condition_path %>
